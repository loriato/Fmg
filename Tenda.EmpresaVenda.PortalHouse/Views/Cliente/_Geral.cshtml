@using Europa.Resources
@model Tenda.EmpresaVenda.ApiService.Models.Cliente.ClienteDto

@{
    ViewBag.Codigo = "EVS05";
    var teste = Model.IdCliente;
}
<script>
    Europa.Mascaras.AplicarMascaraCpfCnpj();
</script>

<div>
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.InformacoesGerais</h3>
                <div class="pull-right">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
@Html.HiddenFor(reg => reg.IdCliente, new { Value = Model.IdCliente })
<div class="row">
    <div class="col-md-6 form-group">
        @Html.Label(GlobalMessages.NomeCompleto + " *", new { @class = "control-label" })
        @Html.TextBoxFor(reg => reg.InformacoesGeraisDto.NomeCompleto, new { @class = "form-control form-control-sm", maxlength = 128 })
    </div>
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.CpfCnpj + " *", new { @class = "control-label" })
        @Html.TextBoxFor(reg => reg.InformacoesGeraisDto.CpfCnpj, new { @class = "form-control form-control-sm mascaraCpfCnpj", maxlength = 20 })
    </div>
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.Sexo + " *", new { @class = "control-label" })
        @Html.EnumDropDownListFor(x => x.InformacoesGeraisDto.TipoSexo, GlobalMessages.Selecione, new { @class = "form-control form-control-sm" })
    </div>
</div>
<div class="row">
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.TelefonePrincipal, new { @class = "control-label" })
        @Html.TextBoxFor(reg => reg.InformacoesGeraisDto.TelefoneResidencial, new { @class = "form-control form-control-sm" })
    </div>
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.TelefoneComercial, new { @class = "control-label" })
        @Html.TextBoxFor(reg => reg.InformacoesGeraisDto.TelefoneComercial, new { @class = "form-control form-control-sm" })
    </div>
    <div class="col-md-4 col-md-offset-1 form-group">
        @Html.Label(GlobalMessages.EmailPrincipal, new { @class = "control-label" })
        @Html.TextBoxFor(reg => reg.InformacoesGeraisDto.Email, new { @class = "form-control form-control-sm", maxlength = 128 })
    </div>
</div>