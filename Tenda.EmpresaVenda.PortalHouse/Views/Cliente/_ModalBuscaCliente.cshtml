@using Europa.Resources
<script src="~/Static/projeto/cliente/modal-cliente.js"></script>
<script>
    Europa.Components.ClienteModal.UrlListar = '@Url.Action("ListarClientes", "Cliente")';
</script>

<div class="modal fade bd-example-modal-lg" id="modal_busca_clientes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.PesquisarClientesCadastrado</h4>
                @*<img data-dismiss="modal" class="btn-close modal-close" aria-label="Close" src="~/Static/images/x-icon-red.png" />*@
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" ng-controller="listClientes as table">
                <form id="form_modal_preclientes">
                    <div class="row">
                        <div class="col-md-3 form-group">
                            <label>@GlobalMessages.Nome</label>
                            <input type="text" id="cliente_filtro_nome" name="nome" class="form-control form-control-sm" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                        <div class="col-md-3 form-group">
                            <label>@GlobalMessages.Email</label>
                            <input type="text" id="cliente_filtro_email" name="email" class="form-control form-control-sm" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                        <div class="col-md-3 form-group">
                            <label>@GlobalMessages.Telefone</label>
                            <input type="text" id="cliente_filtro_telefone" name="telefone" class="form-control form-control-sm" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                        <div class="col-md-3 form-group">
                            <label>@GlobalMessages.CpfCnpj</label>
                            <input type="text" id="cliente_filtro_cpf_cnpj" name="cpfCnpj" class="form-control form-control-sm" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                    </div>
                    <div>

                    </div>
                </form>
                <div id="barra_datatable_modal_cliente">
                    <div class="modal-header span.modal-title">
                        <h5>@GlobalMessages.ClientesEncontrados</h5>
                        <div class="modal-footer">
                            <button class="button__red__outline px-3 mx-2" type="submit" title="@GlobalMessages.Filtrar" ng-click="reloadData()"><i class="fa fa-filter" aria-hidden="true"></i>  @GlobalMessages.Filtrar</button>
                            <button class="button__red__outline px-3 mx-2" type="button" title="@GlobalMessages.Limpar" onclick="Europa.Components.ClienteModal.LimparBusca()"><i class="fa fa-eraser" aria-hidden="true"></i>  @GlobalMessages.Limpar</button>
                        </div>
                    </div>
                    
                </div>
                <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                       dt-instance="table.dtInstance" class="table"
                       dt-column-defs="table.dtColumnDefs"></table>
            </div>
            <div class="modal-footer">
                <button type="button" class="button__red__outline px-3 mx-2" title="@GlobalMessages.Selecionar" onclick="Europa.Components.ClienteModal.Selecionar()"><i class="fa fa-check" aria-hidden="true"></i>  @GlobalMessages.Selecionar</button>
                <button type="button" class="button__red__outline px-3 mx-2" data-dismiss="modal" title="@GlobalMessages.Desistir"><i class="fa fa-ban" aria-hidden="true"></i> @GlobalMessages.Desistir</button>
            </div>
        </div>
    </div>
</div>