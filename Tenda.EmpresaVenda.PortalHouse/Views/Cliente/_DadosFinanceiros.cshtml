@using Europa.Resources
@model Tenda.EmpresaVenda.ApiService.Models.Cliente.ClienteDto

@{
    ViewBag.Codigo = "EVS05";
}

<div>
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.DadosFinanceiros</h3>
                <div class="pull-right">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 form-group">
        @Html.Label(GlobalMessages.TipoRenda, new { @class = "control-label" })
        @Html.EnumDropDownListFor(x => x.DadosFinanceirosDto.TipoRenda, GlobalMessages.Selecione, new { @class = "form-control form-control-sm", onchange = "Europa.Controllers.Cliente.TipoRendaOnChange()" })
    </div>
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.RendaFormal)
        @Html.TextBoxFor(x => x.DadosFinanceirosDto.RendaFormal, new { @class = "form-control form-control-sm text-right dinheiro", maxlength = 13, Value = $"{Model.DadosFinanceirosDto?.RendaFormal:n2}", onchange = "Europa.Controllers.Cliente.RendaOnchange()" })
    </div>
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.RendaInformal)
        @Html.TextBoxFor(x => x.DadosFinanceirosDto.RendaInformal, new { @class = "form-control form-control-sm text-right dinheiro", maxlength = 13, Value = $"{Model.DadosFinanceirosDto?.RendaInformal:n2}", onchange = "Europa.Controllers.Cliente.RendaOnchange()" })
    </div>
</div>
<div class="row">
    <div class="col-md-2 form-group">
        @Html.Label(GlobalMessages.RendaMensal)
        @Html.TextBoxFor(x => x.DadosFinanceirosDto.RendaMensal, new { @class = "form-control form-control-sm text-right dinheiro", maxlength = 13, Value = $"{Model.DadosFinanceirosDto?.RendaMensal:n2}", @readonly = "readonly" })
    </div>
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.ValorFgts, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.DadosFinanceirosDto.FGTS, new { @class = "form-control form-control-sm text-right dinheiro", maxlength = 13, Value = $"{Model.DadosFinanceirosDto?.FGTS:n2}" })
    </div>
    <div class="col-md-3 form-group">
        @Html.Label(GlobalMessages.MesesFgts, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.DadosFinanceirosDto.MesesFGTS, new { @class = "form-control form-control-sm text-right inteiro" })
    </div>
</div>
