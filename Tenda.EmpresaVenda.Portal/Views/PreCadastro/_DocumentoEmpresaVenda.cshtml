@using Europa.Resources

<script>
    Europa.Controllers.PreCadastroEv.UrlListarDocumentos = '@Url.Action("ListarDocumentosDatatable", "PreCadastro")';
    Europa.Controllers.PreCadastroEv.UrlListarTiposDocumentoEmpresaVenda = '@Url.Action("ListarTiposDocumentoEmpresaVenda", "PreCadastro")';
    Europa.Controllers.PreCadastroEv.UrlUploadDocumentoEmpresaVenda = '@Url.Action("UploadDocumentoEmpresaVenda", "PreCadastro")';
</script>

<div class="col-md-24">
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.DocumentosEmpresaVenda</h3>
                <div class="pull-right">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-24">
    <form id="documentos_empresa_venda" method="post" enctype="multipart/form-data">
        <div class="col-md-24">
            <div class="col-md-8">
                @Html.Label(GlobalMessages.Documento)
                <input name="arquivoEmpresaVenda" id="arquivoEmpresaVenda" type="file" class="control-label" style="width: 100%;" accept="application/pdf">
            </div>
            <div class="col-md-6 col-md-offset-1">
                @Html.Label(GlobalMessages.TipoDeDocumento)
                @Html.DropDownList("TiposDocumentoEmpresaVenda", new List<SelectListItem>(), GlobalMessages.Selecione, new { @class = "form-control" })
            </div>
            <div class="col-md-2 col-md-offset-1">
                @Html.Label(GlobalMessages.Adicionar, new { style = "visibility:hidden" })
                <button id="btn_adicionar_documento" class="form-control" onclick="Europa.Controllers.PreCadastroEv.PrepararUploadEmpresaVenda()">
                    <i class="fa fa-plus"></i>
                    @GlobalMessages.Adicionar
                </button>
            </div>
        </div>

        <div ng-controller="documentoEmpresaVendaTable as table">
            <div id="documento_empresa_venda_datatable_header">
                <div class="col-md-24">
                    @Html.Label(GlobalMessages.ArquivosCarregados)
                </div>
            </div>
            <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                   dt-instance="table.dtInstance" class="table"
                   dt-column-defs="table.dtColumnDefs"></table>
        </div>
    </form>
</div>


