@using Europa.Resources
@using Europa.Extensions
@model Europa.Fmg.Portal.Models.PreCadastroDTO

<div class="col-md-24">
    <br />
    <div class="panel-heading pull-left">
        <div>
            <h3><strong>@GlobalMessages.DadosCadastrais</strong></h3>
            <div class="pull-right">
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="col-md-24">
    <form id="form_dados_cadastrais">
        <div class="col-md-24">
            <div class="col-md-24">
                <div class="col-md-7 form-group">
                    @Html.Label(GlobalMessages.RazaoSocial + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.RazaoSocial, new { @class = "form-control", @maxlength = 256 })
                </div>
                <div class="col-md-4 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.NomeFantasia + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.NomeFantasia, new { @class = "form-control", @maxlength = 128 })
                </div>
                <div class="col-md-3 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.Cnpj + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.CNPJ, new { @class = "form-control", @maxlength = 20 })
                </div>
                <div class="col-md-3 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.InscricaoMunicipal + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.InscricaoMunicipal, new { @class = "form-control", @maxlength = 30 })
                </div>
                <div class="col-md-3 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.InscricaoEstadual + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.InscricaoEstadual, new { @class = "form-control", @maxlength = 30 })
                </div>
            </div>
            <div class="col-md-24">
                <div class="col-md-7  form-group">
                    @Html.Label(GlobalMessages.CreciJuridico + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.CreciJuridico, new { @class = "form-control", @maxlength = 50 })
                </div>
                <div class="col-md-4 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.CEP + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.Cep, new { @class = "form-control", maxlength = 9, onchange = "Europa.Controllers.PreCadastroEv.OnChangeCepEmpresaVenda(this)" })
                </div>
                <div class="col-md-7 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.Endereco + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.Logradouro, new { @class = "form-control", maxlength = 60 })
                </div>
                <div class="col-md-3 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.Numero + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.Numero, new { @class = "form-control text-right", maxlength = 10 })
                </div>
            </div>
            <div class="col-md-24">
                <div class="col-md-7 form-group">
                    @Html.Label(GlobalMessages.Complemento, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.Complemento, new { @class = "form-control", maxlength = 30 })
                </div>
                <div class="col-md-4 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.Bairro + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.Bairro, new { @class = "form-control", maxlength = 40 })
                </div>
                <div class="col-md-7 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.Cidade + " *", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.EmpresaVenda.Cidade, new { @class = "form-control", maxlength = 40 })
                </div>
                <div class="col-md-3 col-md-offset-1 form-group">
                    @Html.Label(GlobalMessages.Estado + " *", new { @class = "control-label" })
                    @{
                        if (Model.HasValue() && Model.HasValue() && Model.EmpresaVenda.Estado.HasValue())
                        {
                            Html.RenderPartial("_EstadosDropDownList", Tuple.Create("EmpresaVenda.Estado", Model.EmpresaVenda.Estado));
                        }
                        else
                        {
                            Html.RenderPartial("_EstadosDropDownList", Tuple.Create("EmpresaVenda.Estado", "EmpresaVenda_Estado"));
                        }
                    }
                </div>

            </div>
        </div>
    </form>
</div>

