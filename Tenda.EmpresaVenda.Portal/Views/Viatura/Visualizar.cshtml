@using Tenda.Domain.Fmg.Models
@model Viatura
<script src="~/Static/projeto/viatura/viatura-usuario-datatable.js"></script>
<script>
    Europa.Controllers.ViaturaUsuario.UrlListar = '@Url.Action("ListarViaturaUsuario","Viatura")';
</script>
<div id="titlebar-name">
    Viatura
</div>
<div id="titlebar-buttons">
    <a class="btn btn-blue" href="@Url.Action("Index","Viatura")"><i class="fas fa-arrow-left"></i> Voltar</a>

</div>
<div class="container mt-5">
    <div class="mt-4">
        <form id="form-viatura">
            @Html.HiddenFor(x => x.Id)
            <div class="row">
                <div class="col-md-4 form-group">
                    @Html.Label("Placa", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Placa, null, new { @class = "form-control", maxlength = 128, @readonly="readonly"})
                </div>
                <div class="col-md-4 form-group">
                    @Html.Label("Modelo", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Modelo, null, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-4 form-group">
                    @Html.Label("Renavam", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Renavam, null, new { @class = "form-control", maxlength = 11, @readonly = "readonly" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 form-group">
                    @Html.Label("Tipo Combustível", new { @class = "control-label" })
                    @Html.EnumDropDownListFor(x => x.TipoCombustivel, "Selecione", new { @class = "form-control", maxlength = 128, disabled = "disabled" })
                </div>
                <div class="col-md-4 form-group">
                    @Html.Label("Quilometragem", new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Quilometragem, null, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-md-4 form-group">
                    @Html.Label("Situação", new { @class = "control-label" })
                    @Html.EnumDropDownListFor(x => x.Situacao, null, new { @class = "form-control", disabled = "disabled" })
                </div>

            </div>
        </form>
    </div>
    <div class="mt-4">
        <div ng-controller="ViaturaUsuarioDataTable as table">
            <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                   dt-instance="table.dtInstance" class="table table-striped table-bordered"
                   dt-column-defs="table.dtColumnDefs"></table>
        </div>
    </div>
</div>