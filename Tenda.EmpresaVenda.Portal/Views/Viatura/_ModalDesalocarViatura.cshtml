
<script src="~/Static/projeto/viatura/desalocar-usuario.js"></script>
<script>
    Europa.Controllers.Desalocar.UrlDesalocar = '@Url.Action("Desalocar","Viatura")';
</script>
<div class="modal fade" id="modal-desalocar" data-backdrop="static" data-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Desalocar Viatura</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-desalocar">
                    <div class="row">
                        @Html.Hidden("IdViaturaDesalocar")
                        <div class="col-md-6 form-group">
                            @Html.Label("Viatura", new { @class = "control-label" })
                            @Html.TextBox("ViaturaDesalocar", "", new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-md-6 form-group">
                            @Html.Label("Quilometragem Novo", new { @class = "control-label" })
                            @Html.TextBox("QuilometragemNovo", "", new { @class = "form-control" })

                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-blue" onclick="Europa.Controllers.Desalocar.Salvar()"><i class="far fa-save"></i> Salvar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> Fechar</button>
            </div>
        </div>
    </div>
</div>