@using Europa.Resources

@{
    ViewBag.Title = "REGRA DE COMISSÃO";
}

<link href="~/Static/projeto/regra-comissao/validar-token.css" rel="stylesheet" />
<script src="~/Static/projeto/regra-comissao/validar-token.js"></script>

<script>
    Europa.Controllers.ValidarToken.UrlReenviarToken = '@Url.Action("ReenviarToken", "RegraComissao")';
    Europa.Controllers.ValidarToken.UrlVerificarToken = '@Url.Action("VerificarToken", "RegraComissao")';
</script>


<div class="menu-options" align='center'>
    <div id="titlebar-name">
        <h3>@ViewBag.Title</h3>
    </div>
    <div id="titlebar-buttons">
    </div>
</div>

<div style="width:100%">
    <div class="div_msg_validar" style="margin-top: 20px;">
        <span>Agora vamos validar sua Regra de Comissão</span>
        <span>@GlobalMessages.DigiteCodigoEmail</span>
    </div>
    <div style="width:100%;text-align:center; margin-top:90px">
        <div style="letter-spacing: 32px;">
            <input type="text" name="1" id="token_1" maxlength="1" onkeyup="Europa.Controllers.ValidarToken.ChangeInput(this)" />
            <input type="text" name="2" id="token_2" maxlength="1" onkeyup="Europa.Controllers.ValidarToken.ChangeInput(this)" />
            <input type="text" name="3" id="token_3" maxlength="1" onkeyup="Europa.Controllers.ValidarToken.ChangeInput(this)" />
            <input type="text" name="4" id="token_4" maxlength="1" onkeyup="Europa.Controllers.ValidarToken.ChangeInput(this)" />
            <input type="text" name="5" id="token_5" maxlength="1" onkeyup="Europa.Controllers.ValidarToken.ChangeInput(this)" />
            <input type="text" name="6" id="token_6" maxlength="1" onkeyup="Europa.Controllers.ValidarToken.ChangeInput(this)" />
        </div>
        <div style="display: grid;margin-top:32px">
            <span id="msg-codigo-error" style="display:none;font-size: 14px;color: #ec1d24;font-weight: 600;">@GlobalMessages.CodigoIncorreto</span>
            <span id="msg_codigo" style="cursor:pointer" onclick="Europa.Controllers.ValidarToken.ReenviarToken()">@GlobalMessages.NaoRecebiCodigo</span>
        </div>
        <input style="opacity:0" id="inputToken" />
        <div style="margin-top: 90px;width:100%">
            <button id="btn_entrar" disabled>@GlobalMessages.Validar</button>
        </div>
    </div>
</div>
@using (Html.BeginForm("InformarToken", "RegraComissao", FormMethod.Post, new { Id = "form_informar_token" }))
{
    @Html.Hidden("token")
}