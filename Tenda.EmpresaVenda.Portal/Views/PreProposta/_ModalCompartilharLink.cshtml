@using Europa.Resources
@using System.Collections.Generic;
@using System.Web.Mvc;
@using Europa.Resources;

@{
    var selectCompartilharLink = new List<SelectListItem>();
    selectCompartilharLink.Add(new SelectListItem { Text = "Indicador", Value = "1" });
    selectCompartilharLink.Add(new SelectListItem { Text = "Indicado", Value = "2" });


}
<script>
    Europa.Controllers.PreProposta.UrlEnviarWhatsBotmakerIndicador = '@Url.Action("EnviarWhatsBotmakerIndicador", "PreProposta")';
    Europa.Controllers.PreProposta.UrlEnviarWhatsBotmakerIndicado = '@Url.Action("EnviarWhatsBotmakerIndicado", "PreProposta")';
</script>
<style>
    .body-compartilhar-link {
        display: flex;
        justify-content: space-between;
    }
</style>
<div id="modal-compartilhar-link" class="modal" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width: 600px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@GlobalMessages.Compartilhar @GlobalMessages.Link  @GlobalMessages.Indicacao</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-24">
                    @Html.Label(GlobalMessages.Destinatario)
                    @Html.DropDownList("Destinatario", selectCompartilharLink, "", new { @class = "form-control", onchange = "Europa.Controllers.PreProposta.OnChangeDestinatario()"})
                </div>
                <div class="col-md-24 hidden indicado">
                    <form id="form-compartilhar-indicado">
                        <div class="col-md-12 form-group">
                            @Html.Label(GlobalMessages.Nome)
                            @Html.TextBox("NomeIndicado", "", new { @class = "form-control", })
                        </div>
                        <div class="col-md-offset-1 col-md-11 form-group">
                            @Html.Label(GlobalMessages.Telefone)
                            @Html.TextBox("TelefoneIndicado", "", new { @class = "form-control" })
                        </div>
                    </form>
                   
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn" onclick="Europa.Controllers.PreProposta.CompartilharLinkIndicador()"><i class="fa fa-whatsapp"></i> @GlobalMessages.Compartilhar</button>
                <button type="button" class="btn" aria-label="Close" data-dismiss="modal"><i class="fa fa-close"></i> @GlobalMessages.Fechar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
