@using Europa.Resources
@model Tenda.EmpresaVenda.Portal.Models.PrePropostaDTO
@using Tenda.Domain.Shared
@using Europa.Extensions
@{
    var validar = ProjectProperties.ValidarCamposOrigemIndicacao;
}
@Html.Hidden("validarOrigemIndicacao", validar)
<div class="col-md-24">
    <div class="modal" id="modal_origem_indicacao" role="dialog" data-backdrop="static">
        <div class="modal-dialog" role="document" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header center">
                    <h4 class="modal-title" id="myModalLabel"> @GlobalMessages.Origem  @GlobalMessages.TipoOrigemCliente_Indicacao</h4>
                    <img data-dismiss="modal" class="btn-close modal-close" onclick="@Model.PreProposta.Id.IsEmpty() ?  Europa.Controllers.PreProposta.CancelarModalOrigemIndicacao() : Europa.Controllers.PreProposta.FecharModalOrigemIndicacao()"
                         src="~/Static/images/x-icon-red.png" />
                </div>
                <div class="modal-body">
                    <div class="col-md-12 form-group">
                        @Html.Label(GlobalMessages.NomeIndicador, new { @class = "control-label" })
                        @Html.TextBoxFor(reg => reg.PreProposta.NomeIndicador, new { @class = "form-control", @maxlength = 128 })
                    </div>
                    <div class="col-md-11 col-md-offset-1 form-group">
                        @Html.Label(GlobalMessages.CpfIndicador, new { @class = "control-label" })
                        @Html.TextBoxFor(reg => reg.PreProposta.CpfIndicador, new { @class = "form-control", @maxlength = 14 })
                    </div>
                </div>
                <div class="modal-footer">
                    @if (Model.PreProposta.Id.IsEmpty())
                    {
                        <button type="button" class="btn" title="@GlobalMessages.Salvar" onclick="Europa.Controllers.PreProposta.ValidarOrigemIndicacao()">
                            <i class="fa fa-save" aria-hidden="true"></i>  @GlobalMessages.Salvar
                        </button>
                        <button type="button" class="btn" onclick="Europa.Controllers.PreProposta.CancelarModalOrigemIndicacao()" title="@GlobalMessages.Cancelar">
                            <i class="fa fa-ban"></i> @GlobalMessages.Cancelar
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn" data-dismiss="modal" title="@GlobalMessages.Fechar">
                            <i class="fa fa-ban"></i> @GlobalMessages.Fechar
                        </button>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
