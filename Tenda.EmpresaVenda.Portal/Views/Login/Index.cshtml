@{
    Layout = null;
}
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>WebFMG</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/europa")
    @Styles.Render("~/css/bootstrap")
    <link rel="stylesheet" href="~/Static/css/main.css" />
    <link rel="stylesheet" href="~/Static/css/button.css" />
    <link rel="stylesheet" href="~/Static/projeto/login/login.css" />

    <script src="~/Static/js/main.js"></script>
    <script src="~/Static/projeto/login/login.js"></script>
    @*<script>
        Controllers.UrlLogin = '@Url.Action("Logar","Login")'
    </script>*@
</head>
<body>
    <div class="app">
        @using (Html.BeginForm("Logar", "Login", FormMethod.Post, new { role = "form", @class = "col-md-24 needs-validation", id = "form-login", novalidate = "true" }))
        {
            <div class="box-login">
                <div class="mb-3 text-center">
                    <h1 class="h3 font-weight-normal"> Realizar Login</h1>
                </div>
                <div class="form-group">
                    <label for="Usuario" class="control-label">Usuário</label>
                    <input id="Username"  name="Username" class="form-control" placeholder="Usuário" required="" autofocus="">

                </div>
                <div class="form-group">
                    <label for="Senha" class="control-label">Senha</label>
                    <input type="password" id="Password"  name="Password" class="form-control" placeholder="Senha" required="">
                </div>
                <div>
                    <button class="btn btn-lg btn-blue btn-block" type="submit">Entrar</button>
                </div>
                <div class="mt-3 text-center">
                    <a href="#">Esqueceu sua senha?</a>
                </div>
            </div>
        }
    </div>
</body>
</html>
