@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<script type="text/javascript" src="~/Static/projeto/cliente-duplicado/datatable-cliente-duplicado.js"></script>

<div ng-controller="ClienteDuplicadoDatatable as table">
    <div id="cliente_duplicado_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-11">
                    <input type="text" id="nomeCliente" maxlength="50" placeholder="@GlobalMessages.Cliente" class="form-control">
                </div>

                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Visualizar"))
                {
                    <div class="col-md-6 pull-right">
                        <button class="btn btn-default" onclick="Europa.Controllers.ClienteDuplicado.FiltrarClienteDuplicado()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.ClienteDuplicado.LimparFiltroClienteDuplicado()"><i class="fa fa-eraser"></i></button>
                    </div>
                }
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>

