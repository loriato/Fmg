@using Europa.Resources
@using Tenda.Domain.EmpresaVenda.Enums

<div class="modal" id="modal_exportar_todos" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document"style="width: 500px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="Europa.Controllers.Lead.FecharModalExportarTodos()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.ExportarTodos </h4>
            </div>
            <div class="modal-body">
                <div class="col-md-24" style="margin-top:20px;margin-bottom:20px;">
                        <div class="col-md-11 datepicker">
                            @Html.Label(GlobalMessages.Periodo)
                            <div class="input-group">
                                <span class="input-group-addon">@GlobalMessages.De</span>
                                <input type="text" class="datepicker form-control" datatype="date" style="z-index: 10000;" id="DataIndicacaoDeLead" onchange = "Europa.Controllers.Lead.OnChangeDataInicio('DataIndicacaoDeLead()')">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" style="height:30px" onclick=" Europa.Components.DatePicker.ClosestInput(this) ">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-11 col-md-offset-1 datepicker">
                            @Html.Label(GlobalMessages.Periodo, new { style = "visibility:hidden" })
                            <div class="input-group">
                                <span class="input-group-addon">@GlobalMessages.Ate</span>
                                <input type="text" class="datepicker form-control" datatype="date" style="z-index: 10000;" id="DataIndicacaoAteLead">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" style="height:30px" onclick=" Europa.Components.DatePicker.ClosestInput(this) ">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-20" style="margin-top:20px"><b>* @GlobalMessages.PeriodoPermitidoExportar @ViewBag.QuantidadeDiasExportarTodos @GlobalMessages.Dias </b></div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" type="button" onclick="Europa.Controllers.Lead.ExportarTodos()">
                    <i class="fa fa-check"></i> @GlobalMessages.ExportarTodos
                </button>
                <button class="btn btn-default" type="button" onclick="Europa.Controllers.Lead.FecharModalExportarTodos()">
                    <i class="fa fa-close"></i> @GlobalMessages.Fechar
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .daterangepicker.dropdown-menu {
        z-index: 100001;
    }
</style>
