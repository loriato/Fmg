@using Europa.Resources

<script src="~/Static/projeto/loja/modal-status-importacao.js"></script>

<script>
    Europa.Controllers.Loja.StatusImportacao.UrlVerificarTask = '@Url.Action("VerificarStatusImportacao", "Loja")';
    Europa.Controllers.Loja.StatusImportacao.UrlDownloadArquivo = '@Url.Action("DownloadArquivo", "Loja")';
</script>

<div class="modal" id="StatusImportacao" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="Europa.Controllers.Loja.StatusImportacao.Hide()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.StatusImportacao</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-24">
                    <div class="col-md-24">@Html.Label(GlobalMessages.Status)</div>
                    <div class="col-md-24" id="StatusImportacao_Status" style="height:30px">
                        
                    </div>
                    <div class="col-md-24">
                        @Html.Label(GlobalMessages.Detalhes)
                    </div>
                    <div class="col-md-24 panel panel-default" id="StatusImportacao_Log" style="height: 300px;max-height: 300px; overflow-x: auto;padding: 5px;">

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" style="display:none" id="StatusImportacao_Download" onclick="Europa.Controllers.Loja.StatusImportacao.DownloadArquivo()"><i class="fa fa-download" aria-hidden="true"></i> @GlobalMessages.Download</button>
                <button type="button" class="btn btn-default" onclick="Europa.Controllers.Loja.StatusImportacao.Hide()"><i class="fa fa-ban" aria-hidden="true"></i> @GlobalMessages.Fechar</button>
            </div>
        </div>
    </div>
</div>
<form id="StatusImportacao_Exportar" method="POST"></form>  