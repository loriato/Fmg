@using Europa.Resources
@model Tenda.Domain.Security.Views.ViewLogEntidade

@{
    ViewBag.Title = "_DetalhamentoModal";
}
<style>
    pre { padding: 5px; }
    .string { color: cornflowerblue; }
    .number { color: cornflowerblue; }
    .boolean { color: darkred; }
    .null { color: darkred; }
    .key { color: red; }
</style>

<div class="modal" id="detalhamentoLogEntidade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width: 740px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="Europa.Controllers.LogEntidade.Modal.CloseModal()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.LogDeEntidade</h4>
            </div>
            <div class="modal-body">
                <form id="form_detalhar_log_entidade">
                    <div class="col-md-24">
                        <div class="col-md-7">
                            @Html.Label(GlobalMessages.Entidade)
                            @Html.TextBoxFor(x => x.Entidade, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="col-md-4 col-md-offset-1">
                            @Html.Label(GlobalMessages.ChavePrimaria)
                            @Html.TextBoxFor(x => x.ChavePrimaria, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="col-md-5 col-md-offset-1">
                            @Html.Label(GlobalMessages.UsuarioCriador)
                            @Html.TextBoxFor(x => x.NomeUsuarioCriacao, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="col-md-5 col-md-offset-1">
                            @Html.Label(GlobalMessages.UsuarioAtualizacao)
                            @Html.TextBoxFor(x => x.NomeUsuarioAtualizacao, new { @class = "form-control", @readonly = true })
                        </div>    
                    </div>
                    <div class="col-md-24">
                        <div class="col-md-24">
                            @Html.Label(GlobalMessages.Conteudo)
                            <div class="pull-right">
                                <button type="button" class="btn btn-default" style="margin-bottom: -57px;" onclick="Europa.Controllers.LogEntidade.Modal.CopyToClipboard()"><i class="fa fa-copy" aria-hidden="true"></i> Copiar</button>
                            </div>
                        </div>
                        <pre><code id="Conteudo" name="Conteudo"></code></pre>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="Europa.Controllers.LogEntidade.Modal.CloseModal()"><i class="fa fa-close" aria-hidden="true"></i> @GlobalMessages.Fechar</button>
                </div>
        </div>
    </div>
</div>
