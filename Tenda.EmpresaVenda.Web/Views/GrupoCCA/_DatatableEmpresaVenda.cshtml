@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application
@using Tenda.Domain.EmpresaVenda.Enums
@using System.Collections.Generic
@using Tenda.EmpresaVenda.Domain.Commons
@using Tenda.Domain.Core.Enums

<script type="text/javascript" src="~/Static/projeto/grupo-cca/datatable-empresa-venda.js"></script>

<div ng-controller="EmpresaVendaDatatable as table">
    <div id="empresa_venda_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-8 form-group" style="margin-right:5px">
                    <input type="text" id="filtroEmpresa" maxlength="50" placeholder="@GlobalMessages.EmpresaVenda" class="form-control">
                </div>
                <div class="col-md-7 col-md-offset-1 form-group">
                    <select id="autocomplete_regional" multiple="multiple" name="autocomplete_regional" class="select2-container form-control"></select>
                </div>
                <div class="col-md-5 col-md-offset-1 form-group">
                    @Html.DropDownList("filtro_estados", new SelectList(EstadosSelectList.ValuesWithEmpty, "Value", "Text"), new { @class = "form-control", multiple = "multiple", placeholder = "Estado" })
                </div>
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "VisualizarGrupoCCA"))
                {
                    <div class="col-md-3 form-group" style="margin-left: 5px">
                        <button class="btn btn-default" onclick="Europa.Controllers.GrupoCCA.FiltrarEmpresaVenda()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.GrupoCCA.LimparFiltroEmpresaVenda()"><i class="fa fa-eraser"></i></button>
                    </div>
                }
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>

