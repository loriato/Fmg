@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application
@using Tenda.Domain.EmpresaVenda.Enums
@using System.Collections.Generic
@using Tenda.EmpresaVenda.Domain.Commons

<script type="text/javascript" src="~/Static/projeto/grupo-cca/datatable-usuario.js"></script>

<div ng-controller="UsuarioDatatable as table">
    <div id="usuario_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-5" style="margin-right:5px">
                    <input type="text" id="filtroUsuario" maxlength="50" placeholder="@GlobalMessages.Usuario" class="form-control">
                </div>
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "VisualizarGrupoCCA"))
                {
                    <div class="col-md-5" style="margin-left: 5px">
                        <button class="btn btn-default" onclick="Europa.Controllers.GrupoCCA.FiltrarUsuario()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.GrupoCCA.LimparFiltroUsuario()"><i class="fa fa-eraser"></i></button>
                    </div>
                }
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>


