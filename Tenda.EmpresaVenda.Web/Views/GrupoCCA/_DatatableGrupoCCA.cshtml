@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<script type="text/javascript" src="~/Static/projeto/grupo-cca/datatable-grupo-cca.js"></script>

<div ng-controller="GrupoCCADatatable as table">
    <div id="GrupoCCA_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-13" style="margin-right:5px">
                    <input type="text" id="filtroGrupos" maxlength="50" placeholder="@GlobalMessages.CCA" class="form-control">
                </div>
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "VisualizarGrupoCCA"))
                {
                    <div class="col-md-5" style="margin-left: 5px">
                        <button class="btn btn-default" onclick="Europa.Controllers.GrupoCCA.FiltrarGrupoCCA()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.GrupoCCA.LimparFiltroGrupoCCA()"><i class="fa fa-eraser"></i></button>
                    </div>
                }
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "IncluirGrupoCCA")) { 
                    <div class="pull-right" style="margin-right: 5px">
                        <button class="btn btn-default" onclick="Europa.Controllers.GrupoCCA.NovoGrupoCCA()"><i class="fa fa-plus" aria-hidden="true"></i> @GlobalMessages.Incluir</button>
                    </div>
                }
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>
