@using Europa.Resources


<script src="~/Static/projeto/pre-proposta-workflow/disponibilidade-empreendimento-modal.js"></script>

<script>
    Europa.Controllers.DisponibilidadeEmpreendimento.Modal.UrlBuscarEmpreendimento = '@Url.Action("BuscarEmpreendimento", "PrePropostaWorkflow")';
    Europa.Controllers.DisponibilidadeEmpreendimento.Modal.UrlSalvarEmpreendimento = '@Url.Action("SalvarEmpreendimento", "PrePropostaWorkflow")';

</script>

<div class="modal" id="disponibilidade_empreendimento_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width: 1040px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="Europa.Controllers.DisponibilidadeEmpreendimento.Modal.Fechar()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.DisponibilidadeEmpreendimentos</h4>
            </div>
            <div class="modal-body">
                <form id="form_disponibilidade_empreendimento">
                    <div class="col-md-24">
                        <div class="col-md-7">
                            @Html.Label(GlobalMessages.Empreendimento)
                            <select id="autocomplete_empreendimentos" name="Empreendimento.Id" onchange="Europa.Controllers.DisponibilidadeEmpreendimento.Modal.SetarValoresEmpreendimento()" class="select2-container form-control"></select>
                        </div>
                        <div class="col-md-3 col-md-offset-1">
                            @Html.Label(GlobalMessages.DisponibilizarCatalogo)
                            <select class="form-control" id="empreendimento_disponibilizar_catalogo" name="empreendimento_disponibilizar_catalogo">
                                <option value="1">@GlobalMessages.Sim</option>
                                <option value="0">@GlobalMessages.Nao</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-md-offset-1">
                            @Html.Label(GlobalMessages.DisponivelParaVenda)
                            <select class="form-control" id="empreendimento_disponivel_venda" name="empreendimento_disponivel_venda">
                                <option value="1">@GlobalMessages.Sim</option>
                                <option value="0">@GlobalMessages.Nao</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Europa.Controllers.DisponibilidadeEmpreendimento.Modal.SalvarEmpreendimento()"><i class="fa fa-save" aria-hidden="true"></i> @GlobalMessages.Salvar</button>
                <button type="button" class="btn btn-default" onclick="Europa.Controllers.DisponibilidadeEmpreendimento.Modal.Fechar()"><i class="fa fa-close" aria-hidden="true"></i> @GlobalMessages.Fechar</button>
            </div>
        </div>
    </div>
</div>
