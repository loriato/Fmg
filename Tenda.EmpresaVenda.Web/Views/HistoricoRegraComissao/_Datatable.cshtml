@using Europa.Resources

<script type="text/javascript" src="~/Static/projeto/historico-regra-comissao/datatable-historico.js"></script>

<script>
    Europa.Controllers.HistoricoRegraComissao.UrlListarHistorico = '@Url.Action("ListarHistorico","HistoricoRegraComissao")';
</script>

<div ng-controller="HistoricoRegraComissao as table">
    <div id="datatable_header" class="col-md-24">
        <div class="pull-right">  
            <button class="btn btn-default" onclick="Europa.Controllers.HistoricoRegraComissao.Filtrar()">@GlobalMessages.Filtrar</button>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>
