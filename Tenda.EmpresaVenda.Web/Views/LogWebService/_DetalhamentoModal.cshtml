@using Europa.Resources
@model Tenda.Domain.Security.Models.WebServiceMessage

@{
    ViewBag.Title = "_DetalhamentoModal";
}

<div class="modal" id="detalhamentoLogWebService" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width: 1040px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="Europa.Controllers.LogWebService.Modal.CloseModal()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.DetalhesLog</h4>
            </div>
            <div class="modal-body">
                <form id="form_detalhar_log_webservice">
                    <div class="col-md-24">
                        <div class="col-md-7">
                            @Html.Label(GlobalMessages.Horario)
                            @Html.TextBoxFor(x => x.CriadoEm, "{0:dd/MM/yyyy HH:mm:ss}", new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="col-md-5 col-md-offset-1">
                            @Html.Label(GlobalMessages.Endpoint)
                            @Html.TextBoxFor(x => x.Endpoint, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="col-md-5 col-md-offset-1">
                            @Html.Label(GlobalMessages.Operacao)
                            @Html.TextBoxFor(x => x.Action, new { @class = "form-control", @readonly = true })
                        </div>
                        <div class="col-md-4 col-md-offset-1">
                            @Html.Label(GlobalMessages.Sentido)
                            @Html.TextBoxFor(x => x.Stage, new { @class = "form-control", @readonly = true })
                        </div>    
                    </div>
                    <div class="col-md-24">
                        <div class="col-md-24">
                            @Html.Label(GlobalMessages.Detalhes)
                            <div class="pull-right">
                                <button type="button" class="btn btn-default" style="margin-bottom: -57px;" onclick="Europa.Controllers.LogWebService.Modal.CopyToClipboard()"><i class="fa fa-copy" aria-hidden="true"></i> Copiar</button>
                            </div>
                        </div>
                        <pre><code id="Content" name="Content"></code></pre>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
