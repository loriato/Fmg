@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<script type="text/javascript" src="~/Static/projeto/hierarquia-coordenador/datatable-coordenador.js"></script>

<div ng-controller="CoordenadorDatatable as table">
    <div id="coordenador_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-10">
                    <input type="text" id="nomeCoordenador" maxlength="50" placeholder="@GlobalMessages.Coordenador" class="form-control">
                </div>
                <div class="col-md-4" style="padding-left: 5px;">
                    <button class="btn btn-default" onclick="Europa.Controllers.HierarquiaCoordenador.FiltrarCoordenador()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                    <button class="btn btn-default" type="button" onclick="Europa.Controllers.HierarquiaCoordenador.LimparFiltroCoordenador()"><i class="fa fa-eraser"></i></button>
                </div>
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>

