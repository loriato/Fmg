@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<script type="text/javascript" src="~/Static/projeto/hierarquia-coordenador/datatable-supervisor.js"></script>

<div ng-controller="SupervisorDatatable as table">
    <div id="supervisor_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-10">
                    <input type="text" id="nomeSupervisor" maxlength="50" placeholder="@GlobalMessages.Supervisor" class="form-control">
                </div>
                <div class="col-md-3 pull-left" style="margin-left:5px">
                    <button class="btn btn-default" onclick="Europa.Controllers.HierarquiaCoordenador.FiltrarSupervisor()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                    <button class="btn btn-default" type="button" onclick="Europa.Controllers.HierarquiaCoordenador.LimparFiltroSupervisor()"><i class="fa fa-eraser"></i></button>
                </div>
                <div class="pull-right" >
                    @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarPagina"))
                    {
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.HierarquiaCoordenador.ExportarSelecionadosSupervisor()"><i class="fa fa-file-excel-o" aria-hidden="true"></i> @GlobalMessages.ExportaSelecionados</button>

                    }
                    @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarTodos"))
                    {
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.HierarquiaCoordenador.ExportarTodos()"><i class="fa fa-file-excel-o" aria-hidden="true"></i> @GlobalMessages.ExportarTodos</button>

                    }
                </div>
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>


