@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<script type="text/javascript" src="~/Static/projeto/AgenteVenda/datatable-loja-portal.js"></script>

<div ng-controller="LojaPortalDatatable as table">
    <div id="LojaPortal_datatable_header" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-18" style="margin-right:5px">
                    <input type="text" id="filtroLoja" placeholder="@GlobalMessages.Nome" class="form-control">
                </div>
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Visualizar"))
                {
                    <div class="col-md-5" style="margin-left: 5px">
                        <button class="btn btn-default" onclick="Europa.Controllers.LojaPortal.FiltrarLojaPortal()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.LojaPortal.LimparFiltroLojaPortal()"><i class="fa fa-eraser"></i></button>
                    </div>
                }
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>
