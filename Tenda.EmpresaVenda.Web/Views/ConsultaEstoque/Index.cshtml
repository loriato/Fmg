@using Europa.Resources
@using Europa.Extensions
@using Tenda.EmpresaVenda.Web.Models.Application

@{
    ViewBag.Codigo = "EVSNN";
    ViewBag.Title = ApplicationInfo.TituloUnidadeFuncional(ViewBag.Codigo);
}

<script type="text/javascript" src="~/static/projeto/consulta-estoque/consulta-estoque.js"></script>
<script>
    // URLs
    Europa.Controllers.ConsultaEstoque.UrlConsultaEmpreendimento = '@Url.Action("Empreendimento", "ConsultaEstoque")';
    Europa.Controllers.ConsultaEstoque.UrlConsultaUnidade = '@Url.Action("Unidade", "ConsultaEstoque")';
</script>

<div id="titlebar-name">@ViewBag.Title</div>
<div id="titlebar-buttons"></div>

<div class="col-md-24">
    <div ng-controller="estoqueEmpreendimentoTable as table">
        <div id="datatable_estoque_empreendimento_header" class="col-md-24">
            @Html.Label(@GlobalMessages.Empreendimentos)
        </div>
        <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
               dt-instance="table.dtInstance" class="table table-striped table-bordered"
               dt-column-defs="table.dtColumnDefs"></table>
    </div>
</div>


<div class="col-md-24">
    <div ng-controller="estoqueUnidadeTable as table">
        <div id="datatable_estoque_unidade_header" class="col-md-24">
            @Html.Label(@GlobalMessages.Unidades)
        </div>
        <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
               dt-instance="table.dtInstance" class="table table-striped table-bordered"
               dt-column-defs="table.dtColumnDefs"></table>
    </div>
</div>