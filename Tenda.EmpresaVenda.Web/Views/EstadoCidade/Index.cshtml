@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

@{
    ViewBag.Codigo = "CAD13";
    ViewBag.Title = ApplicationInfo.TituloUnidadeFuncional(ViewBag.Codigo);
}

<script type="text/javascript" src="~/Static/projeto/estado-cidade/index-estado-cidade.js"></script>
<script type="text/javascript" src="~/Static/projeto/estado-cidade/datatable-estado.js"></script>
<script type="text/javascript" src="~/Static/projeto/estado-cidade/datatable-cidade.js"></script>
<link href="~/Static/projeto/estado-cidade/estado-cidade.css" rel="stylesheet" />

<script>
    //URLs Datatable Estado
    Europa.Controllers.EstadoCidade.UrlListarEstados = '@Url.Action("ListarEstados", "EstadoCidade")';
    Europa.Controllers.EstadoCidade.UrlListarCidades = '@Url.Action("ListarCidades", "EstadoCidade")';

    //URLs Datatable Cidade
    Europa.Controllers.EstadoCidade.UrlIncluirCidade = '@Url.Action("IncluirCidade", "EstadoCidade")';
    Europa.Controllers.EstadoCidade.UrlAtualizarCidade = '@Url.Action("AtualizarCidade", "EstadoCidade")';
    Europa.Controllers.EstadoCidade.UrlExcluirCidade = '@Url.Action("ExcluirCidade", "EstadoCidade")';

    //Permissões
    Europa.Controllers.EstadoCidade.Permissoes = {
        Atualizar: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "AtualizarCidade")',
        Excluir: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExcluirCidade")',
    };

</script>

<div id="titlebar-name">@ViewBag.Title</div>

<div class="col-md-9">
    @{
        Html.RenderPartial("_DatatableEstado");
    }
</div>

<div class="tabs-container col-md-14 col-md-offset-1">
    <input type="radio" name="tabs" class="tabs" id="tab1" checked>
    <label for="tab1">@GlobalMessages.Cidade</label>
    <div style="
    padding-top: 0px;
    padding-left: 0px;
    padding-right: 0px;
    padding-bottom: 0px;
    ">
        @{
            Html.RenderPartial("_DatatableCidade");
        }
    </div>
</div>