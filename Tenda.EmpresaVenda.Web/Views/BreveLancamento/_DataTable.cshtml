@using Europa.Resources
@using Tenda.Domain.Core.Enums

<div class="col-md-24">
    <form id="form_filtro_empresa_venda">
        <div class="col-md-4">
            @Html.Label(GlobalMessages.BreveLancamento)
            @Html.TextBox("filtro_nome", "", new { @class = "form-control", maxlength = 128 })
        </div>
        <div class="col-md-4 col-md-offset-1">
            @Html.Label(GlobalMessages.Empreendimento)
            <select id="autocomplete_empreendimento_filtro" class="select2-container form-control"multiple="multiple" ></select>
        </div>
        <div class="col-md-3 form-group col-md-offset-1">
            @Html.Label(GlobalMessages.Regional)
            <select id="autocomplete_regional_filtro" name="autocomplete_regional_filtro" class="select-increase-height select2-selection--multiple form-control " multiple="multiple"></select>
        </div>
        <div class="col-md-3 col-md-offset-1">
            @Html.Label(GlobalMessages.Estados)
            @Html.DropDownList("filtro_estados", new SelectList(EstadosSelectList.Values, "Value", "Text"), new { @class = "form-control", multiple = "multiple" })
        </div>
        <div class="col-md-4 col-md-offset-1">
            @Html.Label(GlobalMessages.Cidade)
            @Html.TextBox("filtro_cidade", "", new { @class = "form-control", maxlength = 70 })
        </div>

        <div class="pull-right" style="margin-top: 22px">
            <button class="btn btn-default" title="@GlobalMessages.Filtrar" onClick="Europa.Controllers.BreveLancamento.FiltrarTabela()"><i class="fa fa-filter"></i> @GlobalMessages.Filtrar</button>
            <button type="button" title="@GlobalMessages.Limpar" class="btn btn-default" onClick="Europa.Controllers.BreveLancamento.LimparFiltro()"><i class="fa fa-eraser"></i> @GlobalMessages.Limpar</button>
        </div>
    </form>

    <div ng-controller="brevesLancamentosTable as table">
        <div id="datatable_header" class="col-md-24">
            <div class="col-md-6" style="margin-top:5px">
                @Html.Label(GlobalMessages.BreveLancamento)
            </div>
            <div class="pull-right">
                <button type="button" title="@GlobalMessages.Prioridade" class=" btn btn-default" onClick="Europa.Controllers.BreveLancamento.AbrirModal()"> @GlobalMessages.Prioridade </button>
            </div>
        </div>
        <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
               dt-instance="table.dtInstance" class="table table-striped table-bordered"
               dt-column-defs="table.dtColumnDefs"></table>
    </div>
</div>