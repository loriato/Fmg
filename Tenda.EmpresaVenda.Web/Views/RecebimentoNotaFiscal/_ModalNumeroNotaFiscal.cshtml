@using Europa.Resources


<div class="col-md-24">
    <div class="modal" id="numero_nota_fiscal" tabindex="-1" role="dialog" data-backdrop="static">
        <div class="modal-dialog" role="document" style="width: 500px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">@GlobalMessages.UploadNotaFiscal</h4>
                </div>
                <div class="modal-body">
                    <div id="form_upload_nota_fiscal">
                        <div class="col-md-24">
                            @Html.Label(GlobalMessages.NumeroNotaFiscalP)
                            @Html.TextBox("NovoNotaFiscal", 0, new { @class = "form-control", @maxlength = "9", @pattern = "[0-9]*", @onFocus = "removeZeroEsquerda(this)", @onblur = "removeZeroEsquerda(this)" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" title="@GlobalMessages.Salvar" onclick="Europa.Controllers.RecebimentoNF.AtualizarNumeroNF()">
                        <i class="fa fa-save" aria-hidden="true"></i> @GlobalMessages.Salvar
                    </button>
                    <button type="button" class="btn" data-dismiss="modal" title="@GlobalMessages.Fechar" onclick="">
                        <i class="fa fa-close"></i> @GlobalMessages.Fechar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function removeZeroEsquerda(objetoElemento) {
        if (parseInt(objetoElemento.value, 10) > 9)
            return objetoElemento.value = parseInt(objetoElemento.value, 10);

    }
</script>