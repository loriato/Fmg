@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

@{
    ViewBag.Codigo = "CAD14";
    ViewBag.Title = ApplicationInfo.TituloUnidadeFuncional(ViewBag.Codigo);
}

<script type="text/javascript" src="~/Static/projeto/estado-avalista/index-estado-avalista.js"></script>
<script type="text/javascript" src="~/Static/projeto/estado-avalista/datatable-estado.js"></script>
<script type="text/javascript" src="~/Static/projeto/estado-avalista/datatable-avalista.js"></script>
<link href="~/Static/projeto/estado-cidade/estado-cidade.css" rel="stylesheet" />

<script>

    Europa.Controllers.EstadoAvalista.UrlListarAvalista = '@Url.Action("ListarAvalista", "EstadoAvalista")';
    Europa.Controllers.EstadoAvalista.UrlListarEstados = '@Url.Action("ListarEstados", "EstadoAvalista")';
    Europa.Controllers.EstadoAvalista.UrlOnJoin = '@Url.Action("Join", "EstadoAvalista")';
    Permissões
    Europa.Controllers.EstadoAvalista.Permissoes = {
        Join: 'SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Join")',
    };

</script>

<div id="titlebar-name">@ViewBag.Title</div>

<div class="col-md-9">
    @{
        Html.RenderPartial("_DatatableEstado");
