@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<div ng-controller="DatatableAvalista as table">
    <div id="datatable_avalista_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-10" style="margin-right:5px">
                    <input type="text" id="filtroAvalista" placeholder="@GlobalMessages.Avalista" class="form-control">
                </div>
                 
                  <div class="col-md-5" style="margin-left: 5px">
                      <button class="btn btn-default" onclick="Europa.Controllers.EstadoAvalista.FiltrarAvalistas()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                      <button class="btn btn-default" type="button" onclick="Europa.Controllers.EstadoAvalista.LimparFiltroAvalista()"><i class="fa fa-eraser"></i></button>
                  </div>
                
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>
