@using Europa.Resources
@using Tenda.Domain.EmpresaVenda.Models
@using Tenda.Domain.EmpresaVenda.Enums
@using Tenda.EmpresaVenda.Web.Models.Application
@using Europa.Extensions

@model List<Notificacao>

<style>
    .tituloLido {
        font-size: 14px;
        font-weight: bold;
        color: #b4b8be;
    }

    .tituloNaoLido {
        font-size: 14px;
        color: var(--dark);
        font-weight: bold;
    }

    .msgLida {
        font-size: 12px;
        color: #cfd5d9;
    }

    .msgNaoLida {
        font-size: 12px;
        color: var(--steel);
    }

    .btn-notificao {
        background: rgba(129, 6, 8, 1);
        border-radius: 20px;

        width: auto;
        height: auto;
        padding-top: 3px;
    }

    .txt-btn-notificacao {
        font-family: AktivGrotesk;
        font-size: 13px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: 0.12px;
        text-align: center;
        color: white;
    }
    .modal-backdrop {
        z-index: -1;
    }
    #conteudo-msg-modal {
        max-height:300px;
    }
</style>

@if (Model.Count > 0)
{
    <div style="padding-bottom: 13px;
">
        @foreach (var obj in Model)
        {
            <div style="margin-top:16px;padding-left: 18px;">
                <div>
                    <span class="@(obj.DataLeitura < SessionAttributes.Current().UsuarioPortal.UltimaLeituraNotificacao ? "tituloLido":"tituloNaoLido")">@obj.Titulo</span>
                </div>
                <div style="margin-top:7px">
                    <span class="@(obj.DataLeitura < SessionAttributes.Current().UsuarioPortal.UltimaLeituraNotificacao ? "msgLida" : "msgNaoLida")">@obj.Conteudo</span>
                </div>
                <div class="col-md-offset-24">
                    @if (obj.NomeBotao.HasValue())
                    {
                        <button class="btn btn-notificao  pull-right"><a href="@obj.Link" class="btn-notificao"><span class="txt-btn-notificacao">@obj.NomeBotao</span></a></button>
                    }
                </div>
            </div>
            <div style="border-bottom: solid 1px var(--light-grey-blue);width: 110%; margin-top: 30px; margin-left: -5%;"></div>
        }
    </div>
}
else
{
    <div style="text-align: center; font-size: 14px; margin-top: 24px; color: var(--steel);">
        <span>
            @GlobalMessages.NaoExisteNotificacao
        </span>
    </div>
}
