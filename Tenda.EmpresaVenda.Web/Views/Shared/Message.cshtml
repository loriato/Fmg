<div class="col-md-24" id="message-wrapper">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span>
            </button>
            @{
                foreach (ModelState modelState in ViewData.ModelState.Values)
                {
                    foreach (ModelError modelError in modelState.Errors)
                    {
                        @modelError.ErrorMessage <br />
                    }
                }
            }
        </div>
                }

    @if (ViewBag.SuccessMessages != null && ((List<string>)ViewBag.SuccessMessages).Any())
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span>
            </button>

            @foreach (string mensagem in (List<string>)ViewBag.SuccessMessages)
            {
                @Html.Raw(new HtmlString(mensagem))
                <br />
            }
        </div>
    }
    @if (ViewBag.ErrorMessages != null && ((List<string>)ViewBag.ErrorMessages).Any())
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span>
            </button>

            @foreach (string mensagem in (List<string>)ViewBag.ErrorMessages)
            {
                @mensagem <br />
            }
        </div>
    }
</div>