@using Europa.Resources
<script src="~/Static/portal-pos-venda/precliente-modal.js"></script>
<script>
    Europa.Components.PreClienteModal.listAction = '@Url.Action("ListarPreClientes", "PreClienteNovo")';
</script>

<div class="modal" id="busca_precliente" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width: calc(70vw);">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.BuscarPreClientes</h4>
            </div>
            <div class="modal-body" ng-controller="listPreClientes as table">
                <form id="form_modal_preclientes">
                    <div class="col-md-24">
                        <div class="col-md-5 form-group">
                            <label>@GlobalMessages.Nome</label>
                            <input type="text" id="precliente_filtro_nome" name="nome" class="form-control" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                        <div class="col-md-4 col-md-offset-1">
                            <label>@GlobalMessages.Email</label>
                            <input type="text" id="precliente_filtro_email" name="email" class="form-control" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                        <div class="col-md-4 col-md-offset-1">
                            <label>@GlobalMessages.Telefone</label>
                            <input type="text" id="precliente_filtro_telefone" name="telefone" class="form-control" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                        <div class="col-md-4 col-md-offset-1">
                            <label>@GlobalMessages.CpfCnpj</label>
                            <input type="text" id="precliente_filtro_cpf_cnpj" name="cpfCnpj" class="form-control" aria-describedby="basic-addon2" maxlength="128">
                        </div>
                        <div class="col-md-3 col-md-offset-1">
                            <label>@GlobalMessages.Protocolo</label>
                            <input type="text" id="precliente_filtro_protocolo" name="protocolo" class="form-control" aria-describedby="basic-addon2" maxlength="20">
                        </div>
                    </div>
                    <div>
                        <div id="barra_datatable_modal_precliente">
                            <div class="col-md-18 form-group">
                                <h5>@GlobalMessages.PreClientesEncontrados</h5>
                            </div>
                            <div class="col-md-5 pull-right" style="margin-top: 2px;">
                                <button  class="btn btn-default pull-right" style="margin-left: 3px;" type="button" title="@GlobalMessages.Limpar" onclick="Europa.Components.PreClienteModal.LimparBusca()"><i class="fa fa-eraser" aria-hidden="true"></i>  @GlobalMessages.Limpar</button>
                                <button id="modal_precliente_filtrar" class="btn btn-default pull-right" type="submit" title="@GlobalMessages.Filtrar" ng-click="reloadData()"><i class="fa fa-filter" aria-hidden="true"></i>  @GlobalMessages.Filtrar</button>
                            </div>
                        </div>
                        <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                               dt-instance="table.dtInstance" class="table table-striped table-bordered"
                               dt-column-defs="table.dtColumnDefs"></table>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button style="float:left; display:none" id="precliente_modal_novo" type="button" class="btn btn-default" title="@GlobalMessages.Novo" onclick="Europa.Components.PreClienteModal.Novo()"><i class="fa fa-plus" aria-hidden="true"></i>  @GlobalMessages.Novo</button>
                <button type="button" class="btn btn-primary" title="@GlobalMessages.Selecionar" onclick="Europa.Components.PreClienteModal.Selecionar()"><i class="fa fa-check" aria-hidden="true"></i>  @GlobalMessages.Selecionar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" title="@GlobalMessages.Desistir"><i class="fa fa-ban" aria-hidden="true"></i> @GlobalMessages.Desistir</button>
            </div>
        </div>
    </div>
</div>