@using Tenda.EmpresaVenda.Web.Models.Application
@using Tenda.Domain.Core.Enums
@using Europa.Resources

<div class="col-md-24">
    <form id="form_filtro_empresa_venda">
        <div class="col-md-3">
            @Html.Label(GlobalMessages.Empreendimento)
            @Html.TextBox("filtro_nome", "", new { @class = "form-control", maxlength = 128 })
        </div>
        <div class="col-md-3 col-md-offset-1">
            @Html.Label(GlobalMessages.Regional)
            <select id="autocomplete_regional" multiple="multiple" name="autocomplete_regional" class="select2-container form-control"></select>
        </div>
        <div class="col-md-3 col-md-offset-1">
            @Html.Label(GlobalMessages.Estados)
            @Html.DropDownList("filtro_estados", new SelectList(EstadosSelectList.Values, "Value", "Text"), new { @class = "form-control", multiple = "multiple" })
        </div>
        <div class="col-md-3 col-md-offset-1">
            @Html.Label(GlobalMessages.Cidade)
            @Html.TextBox("filtro_cidade", "", new { @class = "form-control", maxlength = 70 })
        </div>
        <div class="col-md-3 col-md-offset-1">
            @Html.Label(GlobalMessages.DisponibilizarCatalogo)
            <select class="form-control" id="filtro_disponibiliza_catalogo" name="filtro_disponibiliza_catalogo">
                <option value="0" selected>@GlobalMessages.Selecione</option>
                <option value="1" selected>@GlobalMessages.Sim</option>
                <option value="2">@GlobalMessages.Nao</option>
            </select>
        </div>
        <div class="col-md-3 col-md-offset-1">
            @Html.Label(GlobalMessages.DisponivelParaVenda)
            <select class="form-control" id="filtro_disponivel_venda" name="filtro_disponivel_venda">
                <option value="0" selected>@GlobalMessages.Selecione</option>
                <option value="1" selected>@GlobalMessages.Sim</option>
                <option value="2">@GlobalMessages.Nao</option>
            </select>
        </div>

        <div class="pull-right" style="margin-top: 22px">
            <button class="btn btn-default" title="@GlobalMessages.Filtrar" onClick="Europa.Controllers.Empreendimento.FiltrarTabela()"><i class="fa fa-filter"></i> @GlobalMessages.Filtrar</button>
            <button type="button" title="@GlobalMessages.Limpar" class="btn btn-default" onClick="Europa.Controllers.Empreendimento.LimparFiltro()"><i class="fa fa-eraser"></i> @GlobalMessages.Limpar</button>
        </div>
    </form>

    <div ng-controller="empreendimentosTable as table">
        <div id="datatable_header" class="col-md-24">
            <div class="col-md-6" style="margin-top:5px">
                @Html.Label(@GlobalMessages.Empreendimentos)
            </div>
            <div class="col-md-18" align="right">
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarPagina"))
                {
                    <button title="@GlobalMessages.ExportarPagina" type="button" class="btn btn-default"
                            onclick="Europa.Controllers.Empreendimento.ExportarPagina()">
                        <i class="fa fa-file-excel-o" aria-hidden="true"></i> @GlobalMessages.ExportarPagina
                    </button>
                }
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarTodos"))
                {
                    <button title="@GlobalMessages.ExportarTodos" type="button" class="btn btn-default"
                            onclick="Europa.Controllers.Empreendimento.ExportarTodos()">
                        <i class="fa fa-file-excel-o" aria-hidden="true"></i> @GlobalMessages.ExportarTodos
                    </button>
                }
            </div>
        </div>
        <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
               dt-instance="table.dtInstance" class="table table-striped table-bordered"
               dt-column-defs="table.dtColumnDefs"></table>
    </div>
    <form id="formExportacao" class="hidden"></form>
</div>