@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

@{
    ViewBag.Codigo = "CAD17";
    ViewBag.Title = ApplicationInfo.TituloUnidadeFuncional(ViewBag.Codigo);
}


<script type="text/javascript" src="~/Static/projeto/statuspreproposta/StatusPreProposta.js"></script>
<script>
    //URLs Datatable Loja Portal
    Europa.Controllers.TranslateStatusPreProposta.UrlListar= '@Url.Action("Listar", "StatusPreProposta")';
    Europa.Controllers.TranslateStatusPreProposta.UrlIncluir= '@Url.Action("Incluir", "StatusPreProposta")';
    Europa.Controllers.TranslateStatusPreProposta.UrlAlterar= '@Url.Action("Alterar", "StatusPreProposta")';



    Europa.Controllers.TranslateStatusPreProposta.Permissoes = {
        Visualizar: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Visualizar").ToString().ToLower()',
        Incluir: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Incluir").ToString().ToLower()',
        Excluir: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Excluir").ToString().ToLower()',
        Alterar: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Alterar").ToString().ToLower()'
    };
</script>
<div id="titlebar-name">@ViewBag.Title</div>

<div class="col-md-24">
    <form id="form_filtro_TransalteStatus">
        <div class="col-md-24">
            <div class="col-md-20">
                @Html.Label(GlobalMessages.Nome)
                @Html.TextBox("filtro_Nome", "", new { @class = "form-control", maxlength = 50 })
            </div>
            <div class="pull-right col-md-3 col-md-offset-1" style="margin-top: 22px">
                <button class="btn btn-default" title="@GlobalMessages.Filtrar" onClick="Europa.Controllers.TranslateStatusPreProposta.Filtrar()"><i class="fa fa-filter"></i> @GlobalMessages.Filtrar</button>
                <button type="button" title="@GlobalMessages.Limpar" class="btn btn-default" onClick="Europa.Controllers.TranslateStatusPreProposta.LimparFiltro()"><i class="fa fa-eraser"></i> @GlobalMessages.Limpar</button>
            </div>
        </div>
    </form>
    <div ng-controller="TranslateStatusDatatable as table">
        <div id="TranslateStatus_datatable_header" class="col-md-24 container-fluid">
            <div class="col-md-24 form-group">
                <form>
                    @*<div class="col-md-18" style="margin-right:5px">
                            <input type="text" id="filtroLoja" placeholder="@GlobalMessages.Nome" class="form-control">
                        </div>
