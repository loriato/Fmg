@using Europa.Resources
<script src="~/Static/administrativo/parametro-robo/modal-log-execucao.js"></script>
<script>
    Europa.Components.LogExecucaoModal.listAction = '@Url.Action("ListarLogsExecucao", "LogsExecucao")';
    Europa.Components.LogExecucaoModal.buscarExecucao = '@Url.Action("BuscarExecucao", "LogsExecucao")';
</script>
@model Tenda.Domain.Security.Models.LogExecucao

<div class="modal" id="modalLogsExecucao" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width: 1000px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.DetalhamentoLogExecucao</h4>
            </div>
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Execucao.Id)
            <div class="modal-body" ng-controller="listLogs as table">
                <div class="col-md-24">
                    <div class="col-md-8">
                        <label>@GlobalMessages.Nome</label>
                        @Html.TextBoxFor(x => x.Execucao.Quartz.Nome, new { @class = "form-control", id = "nome", @readonly = true })
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-7">
                        <label>@GlobalMessages.Inicio</label>
                        @Html.TextBoxFor(x => x.Execucao.DataInicioExecucao, new { @class = "form-control", id = "dataInicioDialogo", @readonly = true })
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-7">
                        <label>@GlobalMessages.Termino</label>
                        @Html.TextBoxFor(x => x.Execucao.DataFimExecucao, new { @class = "form-control", id = "dataFimDialogo", @readonly = true })
                    </div>
                </div>
                
                <div>
                    <div id="barra_datatable_modal_log_execucao">
                        <form id="formFiltroLogs" class="form-inline">
                            <div class="col-md-24">
                                <div class="col-md-7">
                                    <div class="input-group">
                                        @Html.Label("De", new { @for = "DiaHoraDe", @class = "input-group-addon", id = "diaLabel", style = "width: 35px;" })
                                        @Html.TextBox("filtroDataInicio", "{0:dd/MM/yyyy}", new {@class = "form-control", datepicker = "datepicker", parent = "#modalLogsExecucao", id = "filtroDataInicio"})
                                        @Html.Label("Até", new { @for = "DiaHoraAte", @class = "input-group-addon", id = "diaAteLabel", style = "width: 35px;" })
                                        @Html.TextBox("filtroDataFim", "{0:dd/MM/yyyy}", new { @class = "form-control", datepicker = "datepicker", parent = "#modalLogsExecucao", id = "filtroDataFim" })
                                    </div>
                                </div>
                                <div class="col-md-17">
                                    <div class="col-md-5 col-md-offset-1">
                                        @Html.EnumDropDownListFor(x => x.Tipo, GlobalMessages.Selecione, new {@class = "form-control", id = "filtroTipo"})
                                    </div>
                                    <div class="col-md-10 col-md-offset-1">
                                        @Html.TextBoxFor(x => x.Log, new { @class = "form-control", id = "filtroLog" })
                                    </div>
                                    <div class="col-md-7" style="text-align:right;">
                                        <button class="btn btn-default" type="button" onclick="Europa.Components.LogExecucaoModal.TabelaExtensoes.Filtrar()">
                                            <i class="fa fa-filter"></i> @GlobalMessages.Filtrar
                                        </button>

                                        <button class="btn btn-default" onClick="Europa.Components.LogExecucaoModal.LimparBusca()">
                                            <i class="fa fa-eraser"></i> @GlobalMessages.Limpar
                                        </button>    
                                    </div>
                                    
                                </div>

                            </div>
                            

                        </form>
                    </div>
                    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                           dt-instance="table.dtInstance" class="table table-striped table-bordered"
                           dt-column-defs="table.dtColumnDefs"></table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="Europa.Components.LogExecucaoModal.CloseModal()"><i class="fa fa-close" aria-hidden="true"></i> @GlobalMessages.Fechar</button>
            </div>
        </div>
    </div>
</div>