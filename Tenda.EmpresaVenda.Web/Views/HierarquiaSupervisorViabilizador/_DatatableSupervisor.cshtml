@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<script type="text/javascript" src="~/Static/projeto/hierarquia-supervisor-viabilizador/datatable-supervisor.js"></script>

<div ng-controller="SupervisorDatatable as table">
    <div id="supervisor_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-10">
                    <input type="text" id="nomeSupervisor" maxlength="50" placeholder="@GlobalMessages.Supervisor" class="form-control">
                </div>
                <div class="col-md-4" style="margin-left:5px">
                    <button class="btn btn-default" onclick="Europa.Controllers.HierarquiaSupervisorViabilizador.FiltrarSupervisor()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                    <button class="btn btn-default" type="button" onclick="Europa.Controllers.HierarquiaSupervisorViabilizador.LimparFiltroSupervisor()"><i class="fa fa-eraser"></i></button>
                </div>
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>
