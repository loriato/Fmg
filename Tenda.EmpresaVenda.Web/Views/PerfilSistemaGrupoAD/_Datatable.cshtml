@using Europa.Resources
@using Tenda.EmpresaVenda.Web.Models.Application

<script src="~/Static/administrativo/perfil-sistema-active-directory/datatable-perfil-sistema-ad.js"></script>
<script>
    Europa.Controllers.PerfilSistemaGrupoAD.Permissoes = {
        Alterar: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Alterar").ToString().ToLower()',
        Excluir: '@SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Excluir").ToString().ToLower()'
   };
</script>

<div class="col-md-24">
    <div ng-controller="TabelaPerfilSistemaGrupoAD as perfilSistemaGrupoAD">
        <table datatable="" dt-options="perfilSistemaGrupoAD.dtOptions" dt-columns="perfilSistemaGrupoAD.dtColumns"
               dt-instance="perfilSistemaGrupoAD.dtInstance" class="table table-striped table-bordered"
               dt-column-defs="perfilSistemaGrupoAD.dtColumnDefs"></table>
    </div>
    <div id="perfilSistemaGrupoAD_datatable_header">
        <div class="pull-right">
            @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Incluir"))
            {
                <button class="btn btn-default" title="@GlobalMessages.Novo" onclick="Europa.Controllers.PerfilSistemaGrupoAD.Novo()">
                    <i class="fa fa-plus"></i> @GlobalMessages.Novo
                </button>
            }
            @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarPagina"))
            {
                <button title="@GlobalMessages.ExportarPagina" class="btn btn-default" onClick="Europa.Controllers.PerfilSistemaGrupoAD.ExportarPagina()">
                    <i class="fa fa-file-excel-o"></i> @GlobalMessages.ExportarPagina
                </button>
            }
            @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarTodos"))
            {
                <button title="@GlobalMessages.ExportarTodos" class="btn btn-default" onClick="Europa.Controllers.PerfilSistemaGrupoAD.ExportarTodos()">
                    <i class="fa fa-file-excel-o"></i> @GlobalMessages.ExportarTodos
                </button>
            }
        </div>
    </div>
</div>
<form id="Exportar"></form>