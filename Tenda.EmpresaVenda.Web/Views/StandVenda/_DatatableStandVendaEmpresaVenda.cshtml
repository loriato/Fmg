@using Tenda.EmpresaVenda.Web.Models.Application
@using Europa.Resources
@using Tenda.EmpresaVenda.Domain.Commons

<script type="text/javascript" src="~/Static/projeto/stand-venda/datatable-stand-empresa-venda.js"></script>

<div ng-controller="StandEmpresaVendaDatatable as table">
    <div id="standEmpresaVenda_datatable_barra" class="col-md-24 container-fluid">
        <div class="col-md-24 form-group">
            <form>
                <div class="col-md-24">
                    <b>@GlobalMessages.EmpresaVenda</b>
                </div>
                <div class="col-md-8" style="margin-right:5px">
                    <input type="text" id="filtro_nome_empresa_venda" maxlength="50" placeholder="@GlobalMessages.Nome" class="form-control">
                </div>
                
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Visualizar"))
                {
                    <div class="col-md-4" style="margin-left: 5px">
                        <button class="btn btn-default" onclick="Europa.Controllers.StandVenda.FiltrarStandEmpresaVenda()"><i class="fa fa-filter" aria-hidden="true"></i></button>
                        <button class="btn btn-default" type="button" onclick="Europa.Controllers.StandVenda.LimparFiltroStandEmpresaVenda()"><i class="fa fa-eraser"></i></button>
                    </div>
                }
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>

