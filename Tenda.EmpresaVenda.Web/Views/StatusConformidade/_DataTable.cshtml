@using Europa.Resources

<div ng-controller="StatusConformidade as table">
    <div id="datatable_header" class="col-md-24">
        <div class="col-md-24">
            <form>
                <div class="col-md-7">
                    @Html.TextBox("descricaoConformidadeEvs", "", new { @class = "form-control", placeholder = "Filtro Descrição Junix e Descrição EVS", maxlength = 128 })
                </div>
                <div class="col-md-2">
                    <button class="btn btn-default" onclick="Europa.Controllers.StatusConformidade.Filter()" style="margin-left: 5px"><i class="fa fa-filter"> </i></button>
                    <button class="btn btn-default" type="button" onclick="Europa.Controllers.StatusConformidade.LimparFilter()"><i class="fa fa-eraser"></i></button>
                </div>
                <div class="pull-right">
                    <button class="btn btn-default" type="button" onclick="Europa.Controllers.StatusConformidade.NovoStatusConformidadeEvs()"><i class="fa fa-plus"></i> @GlobalMessages.Novo</button>
                </div>
            </form>
        </div>
    </div>
    <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
           dt-instance="table.dtInstance" class="table table-striped table-bordered"
           dt-column-defs="table.dtColumnDefs"></table>
</div>
