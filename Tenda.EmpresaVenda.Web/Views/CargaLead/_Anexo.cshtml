@using Europa.Resources

<script src="~/Static/projeto/carga-lead/modal-anexo.js"></script>

<script>
    Europa.Controllers.LeadImportExcel.UrlSalvarArquivo = '@Url.Action("UploadImportFile", "CargaLead")';
</script>

<div ng-controller="CargaLeadController" class="modal" id="LeadImportExcel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="Europa.Controllers.LeadImportExcel.CloseModal()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.Importar</h4>
            </div>
            <div class="modal-body" >
                <div class="col-md-24">
                    <div class="col-md-12">
                        @using (Html.BeginForm("UploadImportFile", "CargaLead", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline", id = "formularioUploadArquivoAnexo" }))
                        {
                            @Html.AntiForgeryToken()
                            <label>@GlobalMessages.EnvioArquivo</label>
                            <input type="file" style="margin-top: 5px" id="file" name="file">
                        }

                    </div>
                    <div class="col-md-10 col-md-offset-2">
                        @Html.Label(GlobalMessages.Pacote)
                        @Html.TextBox("Pacote", "", new { @class = "form-control", id="Pacote", maxlength = "50" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ng-click="enviarArquivo()"><i class="fa fa-upload" aria-hidden="true"></i> @GlobalMessages.Importar</button>
                <button type="button" class="btn btn-default" onclick="Europa.Controllers.LeadImportExcel.CloseModal()"><i class="fa fa-ban" aria-hidden="true"></i> @GlobalMessages.Desistir</button>
            </div>
        </div>
    </div>
</div>
