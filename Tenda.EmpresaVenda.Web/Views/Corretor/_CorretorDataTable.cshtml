@using Tenda.EmpresaVenda.Web.Models.Application
@using Tenda.Domain.Core.Enums
@using Tenda.Domain.EmpresaVenda.Enums;
@using Europa.Resources

<div class="col-md-24">
    <form id="form_filtro_empresa_venda">
        <div class="col-md-24">
            <div class="col-md-6">
                @Html.Label(GlobalMessages.Nome)
                @Html.TextBox("filtro_nome", "", new { @class = "form-control", maxlength = 128 })
            </div>
            <div class="col-md-4 col-md-offset-1">
                @Html.Label(GlobalMessages.CpfCnpjCreci)
                @Html.TextBox("filtro_cpf_cnpj_creci", "", new { @class = "form-control", maxlength = 30 })
            </div>
            <div class="col-md-4 col-md-offset-1">
                @Html.Label(GlobalMessages.Situacao)
                @Html.DropDownList("filtro_situacoes", EnumHelper.GetSelectList(typeof(Situacao)), new { @class = "form-control", multiple = "multiple" })
            </div>
            <div class="col-md-7 col-md-offset-1">
                @Html.Label(GlobalMessages.EmpresaVendas)
                @Html.TextBox("filtro_empresa_vendas", "", new { @class = "form-control", maxlength = 128 })
            </div>
        </div>

        <div class="col-md-24">
            <div class="col-md-6">
                @Html.Label(GlobalMessages.Funcao)
                @Html.DropDownList("filtro_funcao", EnumHelper.GetSelectList(typeof(TipoFuncao)), new { @class = "form-control", multiple = "multiple" })
            </div>
            <div class="col-md-4 col-md-offset-1">
                @Html.Label(GlobalMessages.Perfil)
                @Html.TextBox("filtro_perfil", "", new { @class = "form-control", maxlength = 128 })
            </div>
            <div class="col-md-4 form-group col-md-offset-1">
                @Html.Label(GlobalMessages.Regional)
                <select id="autocomplete_regional" name="autocomplete_regional" class="select2-container form-control" multiple></select>
            </div>
            <div class="col-md-4 form-group col-md-offset-1">
                @Html.Label(GlobalMessages.UF)
                @Html.DropDownList("filtro_estados", new SelectList(EstadosSelectList.ValuesWithEmpty, "Value", "Text"), new { @class = "form-control", multiple = "multiple" })
            </div>
            <div class="pull-right" style="margin-top: 22px">
                <button class="btn btn-default" title="@GlobalMessages.Filtrar" onClick="Europa.Controllers.Corretor.FiltrarTabela()"><i class="fa fa-filter"></i> @GlobalMessages.Filtrar</button>
                <button type="button" title="@GlobalMessages.Limpar" class="btn btn-default" onClick="Europa.Controllers.Corretor.LimparFiltro()"><i class="fa fa-eraser"></i> @GlobalMessages.Limpar</button>
            </div>
        </div>
    </form>

    <div ng-controller="corretoresTable as table">
        <div id="datatable_header" class="col-md-24">
            <div class="col-md-6" style="margin-top:5px">
                @Html.Label(@GlobalMessages.Corretores)
            </div>
            <div class="pull-right">
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarPagina"))
                {
                    <button type="button" title="@GlobalMessages.ExportarPagina" class="btn btn-default" onclick="Europa.Controllers.Corretor.ExportarPagina()">
                        <i class="fa fa-file-excel-o"></i> @GlobalMessages.ExportarPagina
                    </button>
                } 
                @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "ExportarTodos"))
                {
                    <button type="button" title="@GlobalMessages.ExportarTodos" class="btn btn-default" onclick="Europa.Controllers.Corretor.ExportarTodos()">
                        <i class="fa fa-file-excel-o"></i> @GlobalMessages.ExportarTodos
                    </button>
                }

                <div class="btn-group">
                    <button class='btn btn-default dropdown-toggle' title="@GlobalMessages.Opcoes" type='button' data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class='fa fa-bars' aria-hidden='true'></i> @GlobalMessages.Opcoes
                    </button>
                    <ul class="dropdown-menu pull-right">
                        @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Ativar"))
                        {
                            <li><a href="#" title="@GlobalMessages.Reativar" ng-click='reativarItens()'>@GlobalMessages.Reativar</a></li>
                        }
                        @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Suspender"))
                        {
                            <li><a href="#" title="@GlobalMessages.Suspender" ng-click='suspenderItens()'>@GlobalMessages.Suspender</a></li>
                        }
                        @if (SessionAttributes.Current().HasPermission(ViewBag.Codigo, "Cancelar"))
                        {
                            <li role="separator" class="divider"></li>
                            <li><a href="#" title="@GlobalMessages.Cancelar" ng-click='cancelarItens()'>@GlobalMessages.Cancelar</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
               dt-instance="table.dtInstance" class="table table-striped table-bordered"
               dt-column-defs="table.dtColumnDefs"></table>
    </div>
</div>

<form id="Exportar"></form>