@using Europa.Resources
@using Europa.Extensions
@model Tenda.Domain.EmpresaVenda.Models.EmpresaVenda

<div class="col-md-24">
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.DadosTributarios</h3>
                <div class="pull-right">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-24">
    <form id="form_dados_tributarios">
        <div class="col-md-4 form-group">
            @Html.Label(GlobalMessages.LegislacaoFederal, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.LegislacaoFederal, new { @class = "form-control", @maxlength = 30 })
        </div>
        <div class="col-md-4 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.Simples + " *", new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Simples, new { @class = "form-control", @maxlength = 30 })
        </div>
        <div class="col-md-4 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.Simei + " *", new { @class = "control-label" })
            @Html.TextBoxFor(x => x.SIMEI, new { @class = "form-control", @maxlength = 30 })
        </div>
        <div class="col-md-4 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.LucroPresumido + " *", new { @class = "control-label" })
            @Html.TextBoxFor(x => x.LucroPresumido, new { @class = "form-control", maxlength = 13, Value = !Model.LucroPresumido.IsEmpty() ? Model.LucroPresumido.ToString("F") : "", @style = "text-align: right" })
        </div>
        <div class="col-md-4 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.LucroReal + " *", new { @class = "control-label" })
            @Html.TextBoxFor(x => x.LucroReal, new { @class = "form-control", maxlength = 13, Value = !Model.LucroReal.IsEmpty() ? Model.LucroReal.ToString("F") : "", @style = "text-align: right" })
        </div>
    </form>
</div>

