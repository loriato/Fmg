@using Europa.Resources

<script type="text/javascript" src="~/Static/projeto/empresa-venda/documento-empresa-venda.js"></script>

<script>
    Europa.Controllers.EmpresaVenda.UrlListarTiposDocumentoEmpresaVenda = '@Url.Action("ListarTiposDocumentoEmpresaVenda", "DocumentoEmpresaVenda")';
    Europa.Controllers.EmpresaVenda.UrlListarDocumentosPreCarregados = '@Url.Action("ListarDocumentosPreCarregados", "DocumentoEmpresaVenda")';

    Europa.Controllers.EmpresaVenda.UrlListarDocumentosEmpresaVenda = '@Url.Action("ListarDocumentosEmpresaVenda","DocumentoEmpresaVenda")';
    Europa.Controllers.EmpresaVenda.UrlDownloadDocumentoEmpresaVenda = '@Url.Action("DownloadDocumentoEmpresaVenda", "DocumentoEmpresaVenda")';

    Europa.Controllers.EmpresaVenda.UrlUploadDocumentoEmpresaVenda = '@Url.Action("UploadDocumentoEmpresaVenda","DocumentoEmpresaVenda")';

    Europa.Controllers.EmpresaVenda.UrlExcluirDocumentoEmpresaVenda = '@Url.Action("ExcluirDocumentoEmpresaVenda", "DocumentoEmpresaVenda")';
</script>

<div class="col-md-24">
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.DocumentosEmpresaVenda</h3>
                <div class="pull-right">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

<form id="documentos_empresa_venda" method="post" enctype="multipart/form-data">
    <div class="col-md-24">
        <div class="col-md-8">
            @Html.Label(GlobalMessages.Documento)
            <input name="arquivoEmpresaVenda" id="arquivoEmpresaVenda" type="file" class="control-label" style="width: 100%;" accept="application/pdf">
        </div>
        <div class="col-md-6 col-md-offset-1">
            @Html.Label(GlobalMessages.TipoDeDocumento)
            @Html.DropDownList("TiposDocumentoEmpresaVenda", new List<SelectListItem>(), GlobalMessages.Selecione, new { @class = "form-control" })
        </div>
        <div class="col-md-2 col-md-offset-1" style="margin-top:17px">
            <button id="btn_adicionar_documento" class="form-control hidden" onclick="Europa.Controllers.EmpresaVenda.PrepararUploadEmpresaVenda()">
                <i class="fa fa-plus"></i>
                @GlobalMessages.Adicionar
            </button>
            <button id="btn_upload_documento" class="form-control hidden" onclick="Europa.Controllers.EmpresaVenda.UploadDocumento()">
                <i class="fa fa-plus"></i>
                @GlobalMessages.Adicionar
            </button>
        </div>
    </div>

    <div class="col-md-24 hidden" id="documentos-pre-carregados">
        <div ng-controller="documentoEmpresaVendaTable as table">
            <div id="documento_empresa_venda_datatable_header">

                <div class="col-md-24">
                    @Html.Label(GlobalMessages.ArquivosCarregados)
                </div>
            </div>
            <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                   dt-instance="table.dtInstance" class="table"
                   dt-column-defs="table.dtColumnDefs"></table>
        </div>
    </div>

    <div class="col-md-24 hidden" id="documentos-salvos">
        <div ng-controller="documentoSalvoEmpresaVendaTable as table">
            <div id="documento_salvo_empresa_venda_datatable_header">

                <div class="col-md-24">
                    @Html.Label(GlobalMessages.DocumentosEmpresaVenda)
                </div>
            </div>
            <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                   dt-instance="table.dtInstance" class="table"
                   dt-column-defs="table.dtColumnDefs"></table>
        </div>
    </div>
</form>
