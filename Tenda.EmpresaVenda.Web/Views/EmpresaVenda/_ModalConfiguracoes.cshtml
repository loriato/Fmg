@using Europa.Resources
@model Tenda.Domain.EmpresaVenda.Models.EmpresaVenda

<script src="~/Static/projeto/empresa-venda/formulario-empresa-venda.js"></script>

@{
    ViewBag.Title = @GlobalMessages.Configuracoes;
}


<div class="modal" id="modal-configuracoes" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width: 540px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="Europa.Controllers.EmpresaVenda.FecharModalConfig()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.Configuracoes</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="col-md-24">
                        <div class="col-md-11  form-group">
                            @Html.Label(GlobalMessages.CorretorVisualizarClientes)
                            @Html.DropDownListFor(model => model.CorretorVisualizarClientes, new List<SelectListItem>()
                                {
                                    new SelectListItem() { Text = "Sim", Value = "True" },
                                    new SelectListItem() { Text = "Não", Value = "False"}
                                }, null, new { @class = "form-control"  })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Europa.Controllers.EmpresaVenda.SalvarModal()"><i class="fa fa-floppy-o" aria-hidden="true"></i> @GlobalMessages.Salvar</button>
                <button type="button" class="btn btn-default" onclick="Europa.Controllers.EmpresaVenda.FecharModalConfig()"><i class="fa fa-close" aria-hidden="true"></i> @GlobalMessages.Desistir</button>
            </div>
        </div>
    </div>
</div>
