@using Europa.Resources

<script type="text/javascript" src="~/Static/projeto/empresa-venda/responsavel-aceite-regra-comissao.js"></script>

<script>
    Europa.Controllers.EmpresaVenda.UrlListarResponsavelAceiteRegraComissao = '@Url.Action("ListarResponsavelAceiteRegraComissao", "EmpresaVenda")';
    Europa.Controllers.EmpresaVenda.UrlIncluirResponsavelAceiteRegraComissao = '@Url.Action("IncluirResponsavelAceiteRegraComissao", "EmpresaVenda")';
    Europa.Controllers.EmpresaVenda.UrlSuspenderResponsavelAceiteRegraComissao = '@Url.Action("SuspenderResponsavelAceiteRegraComissao", "EmpresaVenda")';
</script>


<div id="painel_responsavel_aceite_regra_comissao" style="display:none;">
    <div class="col-md-24">
        <br />
        <div class="geenFieldSet">
            <div class="panel-heading">
                <div>
                    <h3 class="panel-title pull-left">@GlobalMessages.ResponsavelRegraComissao</h3>
                    <div class="pull-right">
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    <form id="responsavel_aceite_regra_comissao" method="post" enctype="multipart/form-data">
        <div class="col-md-24" id="responsavel-aceite-regra-comissao">
            <div ng-controller="responsavelAceiteRegraComissao as table">
                <div id="responsavel_aceite_regra_comissao_header">
                    <div class="col-md-24">
                        @Html.Label(GlobalMessages.ResponsavelRegraComissao)
                        <div class="pull-right">
                            <button id="btn_adicionar_documento" class="form-control" style="width:80px; margin-right:20px;"  onclick="Europa.Controllers.EmpresaVenda.NovoResponsavelAceiteRegraComissao()">
                                <i class="fa fa-plus"></i>
                                @GlobalMessages.Novo
                            </button>
                        </div>
                    </div>
                </div>
                <table datatable="" dt-options="table.dtOptions" dt-columns="table.dtColumns"
                       dt-instance="table.dtInstance" class="table"
                       dt-column-defs="table.dtColumnDefs"></table>
            </div>
        </div>
    </form>
</div>