@using Europa.Resources
@using Europa.Extensions
@model Tenda.Domain.EmpresaVenda.Models.Corretor

<div class="col-md-24">
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.DadosRepresentanteLegal</h3>
                <div class="pull-right">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-24">
    <form id="form_dados_representante_legal">
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.Usuario.Id)
        <div class="col-md-24">
            <div class="col-md-9 form-group">
                @Html.Label(GlobalMessages.NomeCompleto + " *", new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @maxlength = 128 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.RG + " *", new { @class = "control-label" })
                @Html.TextBoxFor(x => x.RG, new { @class = "form-control", @maxlength = 30 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Email + " *", new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @maxlength = 60 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Telefone + " *", new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Telefone, "", new { @class = "form-control", @maxlength = 20 })
            </div>
        </div>
        <div class="col-md-24">
            <div class="col-md-4 form-group">
                @Html.Label(GlobalMessages.CreciFisico + " *", new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Creci, new { @class = "form-control", @maxlength = 128 })
            </div>
            <div class="col-md-4 col-md-offset-1">
                @Html.Label(GlobalMessages.Nacionalidade, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Nacionalidade, new { @class = "form-control", @maxlength = 30 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Cpf + " *", new { @class = "control-label" })
                @Html.TextBoxFor(x => x.CPF, new { @class = "form-control", @maxlength = 30 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Cnpj, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.CNPJ, new { @class = "form-control", @maxlength = 60 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.DataNascimento + " *", new { @class = "control-label" })
                @Html.TextBoxFor(x => x.DataNascimento, new { @class = "form-control", @datepicker = "datepicker" })
            </div>
        </div>
    </form>
    <form id="form_endereco_corretor">

        <div class="col-md-24">
            <div class="col-md-4 form-group">
                @Html.Label(GlobalMessages.CEP, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Cep, new { @class = "form-control", maxlength = 9, onchange = "Europa.Controllers.EmpresaVenda.OnChangeCepCorretor(this)" })
            </div>
            <div class="col-md-9 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Endereco, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Logradouro, new { @class = "form-control", maxlength = 60 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Numero, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Numero, new { @class = "form-control text-right", maxlength = 10 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Complemento, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Complemento, new { @class = "form-control", maxlength = 30 })
            </div>
            <div class="col-md-4 form-group">
                @Html.Label(GlobalMessages.Bairro, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control", maxlength = 40 })
            </div>
            <div class="col-md-9 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Cidade, new { @class = "control-label" })
                @Html.TextBoxFor(x => x.Cidade, new { @class = "form-control", maxlength = 40 })
            </div>
            <div class="col-md-4 col-md-offset-1 form-group">
                @Html.Label(GlobalMessages.Estado, new { @class = "control-label" })
                @{
                    if (Model.HasValue() && Model.HasValue() && Model.Estado.HasValue())
                    {
                        Html.RenderPartial("_EstadosDropDownList", Tuple.Create("Estado", Model.Estado));
                    }
                    else
                    {
                        Html.RenderPartial("_EstadosDropDownList", Tuple.Create("Estado", "Estado"));
                    }
                }
            </div>
        </div>
    </form>
</div>
