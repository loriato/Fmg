@using Europa.Extensions
@using Europa.Resources
@model Tenda.EmpresaVenda.Web.Models.ClienteDTO

@{
    ViewBag.Codigo = "EVS05";
}
<div class="col-md-24">
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.InformacoesComplementares</h3>
                <div class="pull-right">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-24">
    <div class="col-md-4 form-group">
        @Html.Label(GlobalMessages.PossuiVeiculo + "? *", new { @class = "control-label" })
        <div class="col-md-24">
            <div class="col-md-12">
                <label class="control-label"> @Html.RadioButtonFor(reg => reg.Cliente.PossuiVeiculo, true, new { onchange = "Europa.Controllers.Cliente.OnChangePossuiVeiculo()" }) @GlobalMessages.Sim </label>
            </div>
            <div class="col-md-12">
                <label class="control-label"> @Html.RadioButtonFor(reg => reg.Cliente.PossuiVeiculo, false, new { onchange = "Europa.Controllers.Cliente.OnChangePossuiVeiculo()" }) @GlobalMessages.Nao </label>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-md-offset-1 form-group">
        @Html.Label(GlobalMessages.VeiculoFinanciado, new { @class = "control-label" })
        <div class="col-md-24">
            <div class="col-md-12">
                <label class="control-label"> @Html.RadioButtonFor(reg => reg.Cliente.VeiculoFinanciado, true, new { onchange = "Europa.Controllers.Cliente.OnChangeVeiculoFinanciado()" }) @GlobalMessages.Sim </label>
            </div>
            <div class="col-md-12">
                <label class="control-label"> @Html.RadioButtonFor(reg => reg.Cliente.VeiculoFinanciado, false, new { onchange = "Europa.Controllers.Cliente.OnChangeVeiculoFinanciado()" }) @GlobalMessages.Nao </label>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-md-offset-1 form-group">
        @Html.Label(GlobalMessages.ValorVeiculo, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Cliente.ValorVeiculo, new { @class = "form-control text-right dinheiro", maxlength = 13, Value = $"{Model.Cliente?.ValorVeiculo:n2}" })
    </div>
    <div class="col-md-4 col-md-offset-1 form-group">
        @Html.Label(GlobalMessages.ValorUltimaParcelaFinanciamentoVeiculo, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Cliente.ValorUltimaParcelaFinanciamentoVeiculo, new { @class = "form-control text-right dinheiro", maxlength = 13, Value = $"{Model.Cliente?.ValorUltimaParcelaFinanciamentoVeiculo:n2}" })
    </div>
    <div class="col-md-4 col-md-offset-1 form-group">
        @Html.Label(GlobalMessages.DataUltimaParcelaFinanciamentoPaga, new { @class = "control-label" })
        <div class="input-group">
            @Html.TextBoxFor(x => x.Cliente.DataUltimaParcelaFinanciamentoPaga, "{0:dd/MM/yyyy}", new { @class = "form-control", datepicker = "datepicker", parent = "#cliente_form" })
            <span class="input-group-btn">
                <button class="btn btn-default control-label" id="btn_data_financiamento" type="button" onclick="Europa.Components.DatePicker.Closest(this)">
                    <i class="fa fa-calendar"></i>
                </button>
            </span>
        </div>
    </div>
</div>

<div class="col-md=24">
    <div class="col-md-4 form-group">
        @Html.Label(GlobalMessages.PossuiContaBanco + "? *", new { @class = "control-label" })
        <div class="col-md-24">
            <div class="col-md-12">
                <label class="control-label"> @Html.RadioButtonFor(reg => reg.Cliente.PossuiContaBanco, true, new { onchange = "Europa.Controllers.Cliente.OnChangePossuiContaBanco()" }) @GlobalMessages.Sim </label>
            </div>
            <div class="col-md-12">
                <label class="control-label"> @Html.RadioButtonFor(reg => reg.Cliente.PossuiContaBanco, false, new { onchange = "Europa.Controllers.Cliente.OnChangePossuiContaBanco()" }) @GlobalMessages.Nao </label>
            </div>
        </div>
    </div>
    <div id="div_banco" class="col-md-9 col-md-offset-1 form-group">
        @Html.HiddenFor(x => x.Cliente.Banco.Id)
        @{
            Html.RenderAction("RenderBancos");
        }
    </div>
    <div class="col-md-4 col-md-offset-1 form-group">
        @Html.Label(GlobalMessages.LimiteChequeEspecial, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Cliente.LimiteChequeEspecial, new { @class = "form-control text-right dinheiro", maxlength = 13, Value = $"{Model.Cliente?.LimiteChequeEspecial:n2}" })
    </div>
</div>

