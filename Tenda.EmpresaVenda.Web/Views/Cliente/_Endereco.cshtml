@using Europa.Resources
@using Europa.Extensions
@model Tenda.EmpresaVenda.Web.Models.ClienteDTO

@{
    ViewBag.Codigo = "EVS05";
}

<div class="col-md-24">
    <br />
    <div class="geenFieldSet">
        <div class="panel-heading">
            <div>
                <h3 class="panel-title pull-left">@GlobalMessages.Endereco</h3>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-24">
    <div class="col-md-24">
        @Html.HiddenFor(x => x.EnderecoCliente.Id)
        <div class="col-md-4 form-group">
            @Html.Label(GlobalMessages.CEP, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.EnderecoCliente.Cep, new { @class = "form-control cep", maxlength = 9, onchange = "Europa.Controllers.Cliente.OnChangeCepEnderecoCliente(this)" })
        </div>
        <div class="col-md-9 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.Endereco, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.EnderecoCliente.Logradouro, new { @class = "form-control", maxlength = 60 })
        </div>
        <div class="col-md-4 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.Numero, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.EnderecoCliente.Numero, new { @class = "form-control text-right", maxlength = 10 })
        </div>
        <div class="col-md-4 col-md-offset-1">
            @Html.Label(GlobalMessages.Complemento)
            @Html.TextBoxFor(x => x.EnderecoCliente.Complemento, new { @class = "form-control", maxlength = 30 })
        </div>
    </div>
    <div class="col-md-24">
        <div class="col-md-4 form-group">
            @Html.Label(GlobalMessages.Bairro, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.EnderecoCliente.Bairro, new { @class = "form-control", maxlength = 40 })
        </div>
        <div class="col-md-9 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.Cidade, new { @class = "control-label" })
            @Html.TextBoxFor(x => x.EnderecoCliente.Cidade, new { @class = "form-control", maxlength = 40 })
        </div>
        <div class="col-md-4 col-md-offset-1 form-group">
            @Html.Label(GlobalMessages.Estado, new { @class = "control-label" })
            @{
                if (Model.HasValue() && Model.EnderecoCliente.HasValue() && Model.EnderecoCliente.Estado.HasValue())
                {
                    Html.RenderPartial("_EstadosDropDownList", Tuple.Create("EnderecoCliente.Estado", Model.EnderecoCliente.Estado));
                }
                else
                {
                    Html.RenderPartial("_EstadosDropDownList", Tuple.Create("EnderecoCliente.Estado", "Estado"));
                }
            }
        </div>
    </div>
</div>