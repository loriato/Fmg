@using Europa.Resources
<script src="~/Static/administrativo/permissao-perfil/modal-perfil.js"></script>

<script>
    Europa.Controllers.PerfilModal.UrlSalvar = '@Url.Action("Salvar", "Perfil")';
</script>
@model Tenda.Domain.Security.Models.Perfil

<div class="modal" id="edicao_perfil" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" style="overflow: auto">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">@GlobalMessages.IncluirPerfil</h4>
            </div>
            <div class="modal-body">
                <form class="form-inline" id="form_perfil">
                    <div id="divBody">
                        @Html.HiddenFor(x => x.Id)
                        <div class="col-md-24">
                            <label>@GlobalMessages.Nome</label>
                            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="pull-right">
                    <button type="button" class="btn btn-primary" onclick="Europa.Controllers.PerfilModal.Salvar()"><i class="fa fa-save" aria-hidden="true"></i> @GlobalMessages.Salvar</button>
                    <button type="button" class="btn btn-default" onclick="Europa.Controllers.PerfilModal.CloseModal()"><i class="fa fa-close" aria-hidden="true"></i> @GlobalMessages.Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>
